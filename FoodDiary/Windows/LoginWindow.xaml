<Window x:Class="FoodDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodDiary"
        mc:Ignorable="d"
        Icon="../Icons/main1.ico"
        Title="FoodDiary" Height="200" Width="350" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
            <Image Source="../Icons/main.png" Width="40"></Image>
            <TextBox x:Name="txbLogin" Margin="10"></TextBox>
            <TextBox x:Name="txbPass" Margin="10"></TextBox>
            <Button Name="Submit" Click="btnSubmit_OnClick" Width="70" Height="20">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
